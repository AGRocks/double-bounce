<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="traininghub.mobile.Views.NewItemPage"
		     Title="New Item">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="15">
            <Label Text="When" FontSize="Medium" />
            <DatePicker Date="{Binding Item.Date}"/>
            <Entry Text="{Binding Item.Date}" FontSize="Small" />
            <Label Text="Where" FontSize="Medium" />
            <Picker ItemsSource="{Binding Venues}" SelectedItem="{Binding Item.VenueName}"/>
            <Label Text="Duration" FontSize="Medium" />
            <TimePicker Time="{Binding Item.Duration}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
